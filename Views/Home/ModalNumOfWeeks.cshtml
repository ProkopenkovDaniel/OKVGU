@model OKVGU.Models.GroupSemester
@{
    Layout = null;
}
<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4>Группа</h4>
    </div>
    <div class="modal-body">
        @using (Ajax.BeginForm("AddNumberOfWeeks", "Home", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "numberOfWeeks" }, new { @class = "form-horizontal validate", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            @Html.HiddenFor(m => m.GroupId)
            @Html.HiddenFor(m => m.SemesterId)
            @Html.HiddenFor(m => m.id)
            <div class="form-group">
                <label class="col-md-4 control-label">Количество недель</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.NumberOfWeeks, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" class="btn btn-default send" value="Добавить"  />
                </div>
            </div>
        }
    </div>
</div>


