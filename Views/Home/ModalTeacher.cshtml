@model OKVGU.Models.Teacher
@{
    Layout = null;
}
<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4>Преподаватель</h4>
    </div>
    <div class="modal-body">
        @using (Html.BeginForm("AddTeacher", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            @Html.HiddenFor(m=>m.id)
            <div class="form-group">
                <label class="col-md-4 control-label">Фамилия</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Имя</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Отчество</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Patronym, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Администратор</label>
                <div class="col-md-8">
                    @Html.CheckBoxFor(m => m.IsAdm, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Социальный работник</label>
                <div class="col-md-8">
                    @Html.CheckBoxFor(m => m.IsSocWorker, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Годовая нагрузка</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.HoursPerYear, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" class="btn btn-default" value="Добавить" />
                </div>
            </div>
            }
    </div>
</div>
