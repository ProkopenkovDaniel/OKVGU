@{
    ViewBag.Title = "Семестры";
}
<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Преподаватели</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2">
            <span data-url=@Url.Action("LoadTableForSemesters", "Home") id="pathSpan"></span>
            <span data-url=@Url.Action("LoadNumberOfWeeks", "Home") id="WeekPathSpan"></span>
            <div class="form-group">
                <label for="sel1">Группа:</label>
                @Html.DropDownList("GroupId", ViewData["Groups"] as SelectList, new { @class = "form-control", @id = "group" })
            </div>
            <div class="form-group" id="SemesterDropDown">
                <label for="sel1">Семестр:</label>
                @Html.Partial("SemesterDropDown", ViewData["Semesters"])
            </div>
            <div class="d-flex">
                <button data-handler=@Url.Action("ModalSemester", "Home") class="btn btn-success" id="addBtnSem">+</button>
                <button data-handler=@Url.Action("ModalEditSemester", "Home") class="btn btn-primary" id="editBtnSem">/</button>
                <button data-handler=@Url.Action("DropSemester", "Home") class="btn btn-danger" id="dropBtnSem">-</button>
            </div>
        </div>
        <div class="col-lg-8">
            <div id="table"></div>
        </div>
        <div class="col-lg-2 controlBtn">
            @Html.Partial("ControlBtn");
            <div>
                <div id="numberOfWeeks"></div>
                <div class="d-flex">
                    <button data-handler=@Url.Action("ModalNumberOfWeeks", "Home") class="btn btn-primary" id="NumOfWeeksBtn">Изменить</button>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Scripts/SemesterScripts.js")
