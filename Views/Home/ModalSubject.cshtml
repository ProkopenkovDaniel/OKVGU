@model OKVGU.Models.Subject
@{
    Layout = null;
}
<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4>Преподаватель</h4>
    </div>
    <div class="modal-body">
        @using (Html.BeginForm("AddSubject", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()
            @Html.HiddenFor(m => m.id)
            <div class="form-group">
                <label class="col-md-4 control-label">Название</label>
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-4 control-label">Практическое занятие</label>
                <div class="col-md-8">
                    @Html.CheckBoxFor(m => m.IsPractice, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" class="btn btn-default" value="Добавить" />
                </div>
            </div>
        }
    </div>
</div>
